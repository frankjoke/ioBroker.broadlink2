{
    "configTool": [
        {
            "label": "Config",
            "icon": "mdi-cog",
            "items": [
                {
                    "label": "Poll time",
                    "type": "number",
                    "hint": "Poll devices every (15 - 300) seconds, 0 = no polling",
                    "value": "poll",
                    "sm3": true,
                    "prepend-icon": "mdi-timer-sand",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "number": "poll time in seconds from 15-300, 0= no poll",
                            "min": 15,
                            "max": 300,
                            "has": [0],
                            "fixed": true
                        }
                    ],
                    "cols": 3,
                    "sm": 6
                },
                {
                    "label": "Define Unknown Type",
                    "type": "chips",
                    "hint": "Add new device type like `0x12ab=RM4`",
                    "value": "new",
                    "sm3": true,
                    "prepend-icon": "mdi-shape-square-plus",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "regexp": "/^((0x)?[0-9a-f]+=[0-9a-z]+)*$/i",
                            "message": "Need to be something like 0x12ab=RMP"
                        }
                    ],
                    "cols": 3,
                    "sm": 6,
                    "convertold": "stringToArrayWith"
                },
                {
                    "label": "Use specific interface",
                    "type": "select",
                    "select": [],
                    "eval": "item.select = this.$store.state.interfaces",
                    "hint": "IP interface to use, default 0.0.0.0 for all",
                    "value": "interface",
                    "multiple": false,
                    "sm3": true,
                    "prepend-icon": "mdi-spider-web",
                    "persistent-hint": true,
                    "cols": 2,
                    "sm": 4
                },
                {
                    "type": "switch",
                    "label": "Debug mode",
                    "value": "debug",
                    "click": "return (this.$app.debugLevel = this.cItem.debug)",
                    "convertold": "(this.$set(conf,'debug', this.$app.debugLevel), conf.debug)",
                    "cols": 2,
                    "sm": 4
                },
                {
                    "type": "button",
                    "label": "Start Device Scan",
                    "tooltip": "Start a complete device scan",
                    "value": "debug",
                    "click": "return this.$app.sendTo(null,'device_scan','.')",
                    "img": "mdi-gesture-tap-button",
                    "left": true,
                    "small": true,
                    "cols": 2,
                    "sm": 4
                },
                {
                    "label": "Device list",
                    "type": "table",
                    "value": "devList",
                    "dyisable-sort": true,
                    "items-per-page": 15,
                    "cols": 12,
                    "items": [
                        {
                            "text": "Name",
                            "type": "string",
                            "value": "name",
                            "align": "start",
                            "rules": [
                                "uniqueTableRule",
                                {
                                    "regexp": "/^[\\w\\$@/:-]+$/i",
                                    "message": "Only letters, numbers and `$ @ / : _ -` are allowed"
                                }
                            ],
                            "sortable": true,
                            "default": "newName",
                            "class": "text-body-2",
                            "width": "16%"
                        },
                        {
                            "text": "IP address",
                            "type": "string",
                            "value": "ip",
                            "divider": true,
                            "width": "12%",
                            "class": "text-body-2",
                            "rules": [
                                {
                                    "regexp": "/^([0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+)?$/",
                                    "message": "Need to be an IPv4 address (like 11.22.33.44)"
                                }
                            ]
        
                        },
                        {
                            "text": "Mac address",
                            "type": "string",
                            "value": "mac",
                            "divider": true,
                            "width": "12%",
                            "class": "text-body-2",
                            "rules": [
                                {
                                    "regexp": "/^(([\\dA-F]{2}:){5}[\\dA-F]{2})?$/i",
                                    "message": "Need to be a mac address (like 01:23:45:56:78:9a)"
                                }
                            ]
        
                        },
                        {
                            "text": "Poll",
                            "type": "checkbox",
                            "value": "poll",
                            "align": "center",
                            "divider": true,
                            "sortable": false,
                            "width": "5%",
                            "class": "justify-center",
                            "convertold": "(this.$set(conf,'poll', conf.poll || conf.poll===undefined), conf.poll)",
                            "color": "info"
                        },
                        {
                            "text": "Here",
                            "type": "checkbox",
                            "value": "active",
                            "align": "center",
                            "divider": true,
                            "sortable": false,
                            "width": "5%",
                            "class": "justify-center",
                            "disabled": true,
                            "color": "success"        
                        },
                        {
                            "text": "Info",
                            "type": "string",
                            "value": "info",
                            "width": "40%",
                            "disabled": true,
                            "class": "text-caption"
                        }
                    ]
                },
                {
                    "type": "log",
                    "showMax": 20,
                    "cols": 12
                }
            ]
        },
        {
            "label": "States+Scenes",
            "icon": "mdi-table-column-plus-before",
            "items": [
                {
                    "label": "Scene setup",
                    "type": "table",
                    "value": "scenes",
                    "dyisable-sort": true,
                    "cols": 12,
                    "items": [
                        {
                            "text": "Name",
                            "type": "string",
                            "value": "name",
                            "align": "start",
                            "rules": [
                                "uniqueTableRule",
                                "onlyWords"
                            ],
                            "sortable": true,
                            "divider": true,
                            "default": "newName",
                            "width": "20%"
                        },
                        {
                            "text": "Scene",
                            "type": "chips",
                            "value": "scene",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "75%",
                            "convertold": "stringToArrayWith"

                        }
                    ]
                },
                {
                    "label": "States setup",
                    "type": "table",
                    "value": "switches",
                    "dyisable-sort": true,
                    "cols": 12,
                    "items": [
                        {
                            "text": "Name",
                            "type": "string",
                            "value": "name",
                            "align": "start",
                            "rules": [
                                "uniqueTableRule",
                                "onlyWords"
                            ],
                            "sortable": true,
                            "divider": true,
                            "default": "newName",
                            "width": "20%"
                        },
                        {
                            "text": "On",
                            "type": "chips",
                            "value": "on",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "45%",
                            "convertold": "stringToArrayWith"
                        },
                        {
                            "text": "Off",
                            "type": "chips",
                            "value": "off",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "30%",
                            "convertold": "stringToArrayWith"
                        }
                    ]
                }
            ]
        },
        {
            "label": "Learn & Codes",
            "icon": "mdi-remote",
            "items": [
                {
                    "label": "Port",
                    "type": "number",
                    "min": 1000,
                    "max": 65000,
                    "placeholder": "Enter port address on which iobroker will listen to your request",
                    "hint": "Port to listen on >1000 & <65000",
                    "value": "port",
                    "sm3": true,
                    "prepend-icon": "mdi-home-import-outline",
                    "persistent-hint": true,
                    "rules": [
                        "numberRule"
                    ],
                    "cols": 3,
                    "sm": 4
                }
            ]
        }
    ],
    "translation": {
        "getMissing": {
            "en": "Missing text",
            "de": "FehlendeTexte"
        }
    },
    "icon": "broadlink2.png",
    "readme": {
        "en": "README.md"
    }
}