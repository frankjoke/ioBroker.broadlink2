{
    "common": {
        "name": "broadlink2",
        "version": "2.9.9",
        "title": "Broadlink W-Lan devices (RM+, SP+, A1, T1, S1C, LB+, ..)",
        "titleLang": "Broadlink2 (RM++, SP++, A1, T1, S1C, Beok313, Floureon, LB+) W-Lan Broadlink-protocol devices",
        "news": {
            "2.9.9": {
                "en": "Development Beta for broadlin2 3.0.0"
            },
            "2.1.2": {
                "en": "Bug fix of RM4 temperature and Scenes/States, also new naming convention for found devices"
            },
            "2.1.0": {
                "en": "Added RM4+LB1 protocol and also check now device names according mac address or find additional ip addresses",
                "de": "RM4+LB1-Protokolle hinzugefügt und auch automatische Erkennung von Geräten mittels mac-Adresse, oder in Konfig IP-Adresse hinzugefügt"
            },
            "2.0.3": {
                "en": "Changed myAdapter to support js-controller v2.x & v3.x!",
                "de": "myAdapter geändert um js-controller v2.x & v3.x zu unterstützen."
            },
            "2.0.1": {
                "en": "Complete rewrite of adaper with multiple options, please read readme.md!",
                "de": "Komplett neu geschriebenen Adapter mit neuen Funktionen und Konfiguration, bitte README lesen!"
            },
            "1.9.1": {
                "en": "Added RM Mini new support with",
                "de": "Broadlink RM Mini unterstützung"
            },
            "1.1.1": {
                "en": "Adapter handles RM, SP and A1 devices and can rescan them",
                "de": "Adapter verarbeitet RM-, SP- und A1-Geräte"
            }
        },
        "desc": {
            "en": "Broadlink2 Adapter for multiple BroadLink wireless devices (RM++, SP++, A1)",
            "de": "Broadlink2 Adapter für verschiedene Broadlink WLan-Geräte (RM++, SP++, A1)"
        },
        "license": "MIT",
        "platform": "Javascript/Node.js",
        "materialize": true,
        "mode": "daemon",
        "icon": "broadlink2.png",
        "enabled": true,
        "messagebox": true,
        "subscribe": "messagebox",
        "extIcon": "https://raw.githubusercontent.com/frankjoke/ioBroker.broadlink2/master/admin/broadlink2.png",
        "keywords": [
            "Broadlink",
            "W-Lan",
            "IR/RF",
            "Remote",
            "Switch",
            "Plug",
            "A1",
            "RM2",
            "RM3",
            "SP1",
            "SP2",
            "RM4",
            "LB1"
        ],
        "readme": "https://github.com/frankjoke/ioBroker.broadlink2/blob/master/README.md",
        "loglevel": "info",
        "type": "iot-systems",
        "authors": [
            "Frank Joke <frankjoke@hotmail.com>"
        ],
        "compact": false

    },
    "native": {
        "scenes": [
            {
                "name": "Fernsehen",
                "scene": "FernseherAn, FernsehLichtAn, 500, TVWZKanal=12"
            }
        ],
        "switches": [
            {
                "name": "Steckdose_A",
                "on": "Steckdose_A_Ein",
                "off:": "Steckdose_A_Aus"
            },
            {
                "name": "Lüfter_A",
                "on": "Lüfter_A_Aus, Lüfter_A_Mittel, Lüfter_A_Stark"
            },
            {
                "name": "TVWZKanal",
                "on": "TVWZK0, TVWZK1, TVWZK2, TVWZK3, TVWZK4, TVWZK5, TVWZK6, TVWZK7, TVWZK8, TVWZK9",
                "off": "+"
            }
        ],
        "devList": [
            {
              "name": "TestDummy",
              "ip": "193.168.178.114",
              "mac": "43:ea:34:bd:92:4a"
            }
          ],
        "debug": false,
        "poll": "30",
        "interface": "0.0.0.0",
        "new": ["0xabcd=RM4"]
    },
    "objects": [],
    "config": {
        "minWidth": 800,
        "width ": 1024,
        "minHeight": 800,
        "height": 900,
        "configTool": [
            {
                "label": "Config",
                "icon": "mdi-cog",
                "items": [
                    {
                        "label": "Poll time",
                        "type": "number",
                        "hint": "Poll devices every (15 - 300) seconds, 0 = no polling",
                        "value": "poll",
                        "sm3": true,
                        "prepend-icon": "mdi-timer-sand",
                        "persistent-hint": true,
                        "rules": [
                            {
                                "number": "poll time in seconds from 15-300, 0= no poll",
                                "min": 15,
                                "max": 300,
                                "has": [0],
                                "fixed": true
                            }
                        ],
                        "cols": 3,
                        "sm": 6
                    },
                    {
                        "label": "Define Unknown Type",
                        "type": "chips",
                        "hint": "Add new device type like `0x12ab=RM4`",
                        "value": "new",
                        "sm3": true,
                        "prepend-icon": "mdi-shape-square-plus",
                        "persistent-hint": true,
                        "rules": [
                            {
                                "regexp": "/^(0x)?[0-9a-f]+=[0-9a-z]+$/i",
                                "message": "Need to be something like 0x12ab=RMP"
                            }
                        ],
                        "cols": 3,
                        "sm": 6,
                        "convertold": "stringToArrayWith"
                    },
                    {
                        "label": "Use specific interface",
                        "type": "select",
                        "select": [],
                        "eval": "item.select = this.$store.state.interfaces",
                        "hint": "IP interface to use, default 0.0.0.0 for all",
                        "value": "interface",
                        "multiple": false,
                        "sm3": true,
                        "prepend-icon": "mdi-spider-web",
                        "persistent-hint": true,
                        "cols": 3,
                        "sm": 6
                    },
                    {
                        "type": "switch",
                        "label": "Debug mode",
                        "value": "debug",
                        "click": "return this.$app.sendTo(null,'debug',this.cItem.debug)",
                        "cols": 3,
                        "sm": 6
                    },
                    {
                        "type": "button",
                        "label": "Start Device Scan",
                        "tooltip": "Start a complete device scan",
                        "value": "debug",
                        "click": "return this.$app.sendTo(null,'device_scan','.'), this.$alert(`I clicked here!`)",
                        "img": "mdi-gesture-tap-button",
                        "left": true,
                        "small": true,
                        "cols": 3,
                        "sm": 6
                    },
                    {
                        "label": "Device list",
                        "type": "table",
                        "value": "devList",
                        "dyisable-sort": true,
                        "items-per-page": 15,
                        "cols": 12,
                        "items": [
                            {
                                "text": "Name",
                                "type": "string",
                                "value": "name",
                                "align": "start",
                                "rules": [
                                    "uniqueTableRule",
                                    {
                                        "regexp": "/^[\\w\\$@/:-]+$/i",
                                        "message": "Only letters, numbers and `$ @ / : _ -` are allowed"
                                    }
                                ],
                                "sortable": true,
                                "default": "newName",
                                "class": "text-body-2",
                                "width": "16%"
                            },
                            {
                                "text": "IP address",
                                "type": "string",
                                "value": "ip",
                                "divider": true,
                                "width": "12%",
                                "class": "text-body-2",
                                "rules": [
                                    {
                                        "regexp": "/^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$/",
                                        "message": "Need to be an IPv4 address (like 1.2.3.4)"
                                    }
                                ]
            
                            },
                            {
                                "text": "Mac address",
                                "type": "string",
                                "value": "mac",
                                "divider": true,
                                "width": "12%",
                                "class": "text-body-2",
                                "rules": [
                                    {
                                        "regexp": "/^(([\\dA-F]{2}:){5}[\\dA-F]{2})$/i",
                                        "message": "Need to be a mac address (like 01:23:45:56:78:9a)"
                                    }
                                ]
            
                            },
                            {
                                "text": "Poll",
                                "type": "checkbox",
                                "value": "poll",
                                "align": "center",
                                "divider": true,
                                "sortable": false,
                                "width": "5%",
                                "class": "justify-center",
                                "convertold": "(this.$set(conf,'poll', conf.poll || conf.poll===undefined), conf.poll)"
                            },
                            {
                                "text": "Here",
                                "type": "checkbox",
                                "valuex": "(this.$app.isDeviceHere(ci.name))",
                                "value": "active",
                                "align": "center",
                                "divider": true,
                                "sortable": false,
                                "width": "5%",
                                "class": "justify-center",
                                "disabled": true,
                                "color": "success"        
                            },
                            {
                                "text": "Info",
                                "type": "string",
                                "value": "info",
                                "width": "40%",
                                "disabled": true,
                                "class": "text-caption"
                            }
                        ]
                    }
                ]
            },
            {
                "label": "States+Scenes",
                "icon": "mdi-table-column-plus-before",
                "items": [
                    {
                        "label": "Scene setup",
                        "type": "table",
                        "value": "scenes",
                        "dyisable-sort": true,
                        "cols": 12,
                        "items": [
                            {
                                "text": "Name",
                                "type": "string",
                                "value": "name",
                                "align": "start",
                                "rules": [
                                    "uniqueTableRule",
                                    "onlyWords"
                                ],
                                "sortable": true,
                                "divider": true,
                                "default": "newName",
                                "width": "20%"
                            },
                            {
                                "text": "Scene",
                                "type": "chips",
                                "value": "scene",
                                "align": "center",
                                "sortable": false,
                                "divider": true,
                                "width": "75%",
                                "convertold": "stringToArrayWith"
    
                            }
                        ]
                    },
                    {
                        "label": "States setup",
                        "type": "table",
                        "value": "switches",
                        "dyisable-sort": true,
                        "cols": 12,
                        "items": [
                            {
                                "text": "Name",
                                "type": "string",
                                "value": "name",
                                "align": "start",
                                "rules": [
                                    "uniqueTableRule",
                                    "onlyWords"
                                ],
                                "sortable": true,
                                "divider": true,
                                "default": "newName",
                                "width": "20%"
                            },
                            {
                                "text": "On",
                                "type": "chips",
                                "value": "on",
                                "align": "center",
                                "sortable": false,
                                "divider": true,
                                "width": "45%",
                                "convertold": "stringToArrayWith"
                            },
                            {
                                "text": "Off",
                                "type": "chips",
                                "value": "off",
                                "align": "center",
                                "sortable": false,
                                "divider": true,
                                "width": "30%",
                                "convertold": "stringToArrayWith"
                            }
                        ]
                    }
                ]
            },
            {
                "label": "Learn & Codes",
                "icon": "mdi-remote",
                "items": [
                    {
                        "label": "Port",
                        "type": "number",
                        "min": 1000,
                        "max": 65000,
                        "placeholder": "Enter port address on which iobroker will listen to your request",
                        "hint": "Port to listen on >1000 & <65000",
                        "value": "port",
                        "sm3": true,
                        "prepend-icon": "mdi-home-import-outline",
                        "persistent-hint": true,
                        "rules": [
                            "numberRule"
                        ],
                        "cols": 3,
                        "sm": 4
                    }
                ]
            }
        ],
        "translation": {
            "getMissing": {
                "en": "Missing text",
                "de": "FehlendeTexte"
            }
        },
        "icon": "broadlink2.png",
        "readme": {
            "en": "README.md"
        }
    
    }
}
