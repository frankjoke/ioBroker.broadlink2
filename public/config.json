{
    "configTool": [
        {
            "label": "Config",
            "icon": "mdi-cog",
            "items": [
                {
                    "label": "Poll time",
                    "type": "number",
                    "hint": "Poll devices every (15 - 300) seconds, 0 = no polling",
                    "value": "poll",
                    "sm3": true,
                    "prepend-icon": "mdi-timer-sand",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "number": "poll time in seconds from 15-300, 0= no poll",
                            "min": 15,
                            "max": 300,
                            "has": [0],
                            "fixed": true
                        }
                    ],
                    "cols": 3,
                    "sm": 6
                },
                {
                    "label": "Define Unknown Type",
                    "type": "chips",
                    "hint": "Add new device type like `0x12ab=RM4`",
                    "value": "new",
                    "sm3": true,
                    "prepend-icon": "mdi-shape-square-plus",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "regexp": "/^(0x)?[0-9a-f]+=[0-9a-z]+$/i",
                            "message": "Need to be something like 0x12ab=RMP"
                        }
                    ],
                    "cols": 3,
                    "sm": 6,
                    "convertold": "stringToArrayWith"
                },
                {
                    "label": "Use specific interface",
                    "type": "string",
                    "hint": "IP address of the interface to use",
                    "value": "interface",
                    "sm3": true,
                    "prepend-icon": "mdi-spider-web",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "regexp": "/^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$/",
                            "message": "Need to be an IPv4 address (like 1.2.3.4)"
                        }
                    ],
                    "cols": 3,
                    "sm": 6
                },
                {
                    "type": "switch",
                    "label": "Debug mode",
                    "value": "debug",
                    "cols": 2,
                    "sm": 6
                },
                {
                    "ruler": "hr",
                    "cols": 12
                },
                {
                    "label": "Rename devices",
                    "type": "chips",
                    "hint": "Rename devices like `oldname=newname`",
                    "value": "rename",
                    "sm3": true,
                    "prepend-icon": "mdi-rename-box",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "regexp": "=",
                            "message": "Need to be something like 0x12ab=RMP"
                        }
                    ],
                    "cols": 6,
                    "sm": 6,
                    "convertold": "stringToArrayWith"
                },
                {
                    "label": "Additional device IP's",
                    "type": "chips",
                    "hint": "Add device IP's to scan",
                    "value": "additional",
                    "sm3": true,
                    "prepend-icon": "mdi-search-web",
                    "persistent-hint": true,
                    "rules": [
                        {
                            "regexp": "/^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$/",
                            "message": "Need to be an IPv4 address (like 1.2.3.4)"
                        }
                    ],
                    "cols": 6,
                    "sm": 6,
                    "convertold": "stringToArrayWith"
                }
            ]
        },
        {
            "label": "States+Scenes",
            "icon": "mdi-table-column-plus-before",
            "disabled": true,
            "items": [
                {
                    "label": "Scene setup",
                    "type": "table",
                    "value": "scenes",
                    "dyisable-sort": true,
                    "cols": 12,
                    "items": [
                        {
                            "text": "Name",
                            "type": "string",
                            "value": "name",
                            "align": "start",
                            "rules": [
                                "uniqueTableRule",
                                "onlyWords"
                            ],
                            "sortable": true,
                            "divider": true,
                            "default": "newName",
                            "width": "20%"
                        },
                        {
                            "text": "Scene",
                            "type": "chips",
                            "value": "scene",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "75%",
                            "convertold": "stringToArrayWith"

                        }
                    ]
                },
                {
                    "label": "States setup",
                    "type": "table",
                    "value": "switches",
                    "dyisable-sort": true,
                    "cols": 12,
                    "items": [
                        {
                            "text": "Name",
                            "type": "string",
                            "value": "name",
                            "align": "start",
                            "rules": [
                                "uniqueTableRule",
                                "onlyWords"
                            ],
                            "sortable": true,
                            "divider": true,
                            "default": "newName",
                            "width": "20%"
                        },
                        {
                            "text": "On",
                            "type": "chips",
                            "value": "on",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "45%",
                            "convertold": "stringToArrayWith"
                        },
                        {
                            "text": "Off",
                            "type": "chips",
                            "value": "off",
                            "align": "center",
                            "sortable": false,
                            "divider": true,
                            "width": "30%",
                            "convertold": "stringToArrayWith"
                        }
                    ]
                }
            ]
        },
        {
            "label": "Learn & Codes",
            "icon": "mdi-remote",
            "items": [
                {
                    "label": "Port",
                    "type": "number",
                    "min": 1000,
                    "max": 65000,
                    "placeholder": "Enter port address on which iobroker will listen to your request",
                    "hint": "Port to listen on >1000 & <65000",
                    "value": "port",
                    "sm3": true,
                    "prepend-icon": "mdi-home-import-outline",
                    "persistent-hint": true,
                    "rules": [
                        "numberRule"
                    ],
                    "cols": 3,
                    "sm": 4
                }
            ]
        }
    ],
    "translation": {
        "getMissing": {
            "en": "Missing text",
            "de": "FehlendeTexte"
        }
    },
    "icon": "broadlink2.png",
    "readme": {
        "en": "README.md"
    }
}